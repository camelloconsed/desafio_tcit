{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2022"  
},
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "eslint.config.js", "eslint.config.cjs", "eslint.config.mjs"]
}
